<!-- Content Heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<!--Message View-->
<%- messages() %>
<!--Display Errors-->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>

<!--Registration HTML Form-->
<div id="registration-form-div">
    <form id="registration-form" action="/account/register" method="post">
        <!--Adding the 'value' to the inputs makes them "sticky," which means, the values will be re-input if there is an error-->
        <label>First Name: <input type="text" name="account_firstname" required value="<%= locals.account_firstname %>"></label>
        <label>Last Name: <input type="text" name="account_lastname" required value="<%= locals.account_lastname %>"></label>    
        <label>E-mail: <input type="email" name="account_email" required value="<%= locals.account_email %>"></label>
        <label>Password: <input type="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required></label>
        <span id="password-desc">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special
            character.</span>
        <input type="submit" id="submit-registration" value="Register">
    </form>
</div>