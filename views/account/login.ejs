<!-- Content Heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<!--Message View-->
<%- messages() %>
<!--Display Errors-->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>

<!--Login HTML Form-->
<div id="login-form-div">
    <form id="login-form" action="/account/login" method="post">
        <label>E-mail: <input type="email" name="account_email" required></label>
        <label>Password: <input type="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required value="<%= locals.account_email %>"></label>
        <span id="password-desc">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1
            special character.</span>

        <input type="submit" id="submit-login" value="Login to My Account">
    </form>
    <p id="no-account-text">No Account? <a href="/account/register" id="registration-link">Sign-Up</a></p>
</div>